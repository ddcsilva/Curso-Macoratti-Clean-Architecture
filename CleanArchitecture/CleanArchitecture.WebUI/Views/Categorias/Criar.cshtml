@model CleanArchitecture.Application.DTOs.CategoriaDTO

@{
    ViewData["Titulo"] = "Registrar Categoria";
}

<h2>@ViewData["Titulo"]</h2>

<form asp-action="Criar" method="post">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Retornar a Lista</a>
            </div>
        </div>
    </div>
</form>